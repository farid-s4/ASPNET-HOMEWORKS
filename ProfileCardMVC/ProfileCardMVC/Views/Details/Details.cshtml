@model ProfileCardMVC.Models.User

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Name - Профиль</title>
    <style>
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            min-height: 100vh;
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            margin: 0;
            padding: 40px 20px;
        }

        .container {
            max-width: 1000px;
            margin: 0 auto;
        }

        .btn-back {
            display: inline-block;
            background: white;
            color: #667eea;
            padding: 12px 24px;
            text-decoration: none;
            border-radius: 50px;
            margin-bottom: 30px;
            font-weight: 600;
            box-shadow: 0 4px 15px rgba(0,0,0,0.2);
            transition: all 0.3s ease;
        }

        .profile-header {
            background: white;
            border-radius: 20px;
            padding: 40px;
            margin-bottom: 30px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
            display: flex;
            gap: 30px;
            align-items: center;
            flex-wrap: wrap;
        }

        .profile-image-large {
            width: 150px;
            height: 150px;
            border-radius: 50%;
            object-fit: cover;
            border: 5px solid #667eea;
        }

        .profile-name {
            font-size: 2.5rem;
            margin: 0 0 10px 0;
            color: #2d3748;
        }

        .section-card {
            background: white;
            border-radius: 20px;
            padding: 30px;
            margin-bottom: 25px;
            box-shadow: 0 10px 30px rgba(0,0,0,0.2);
        }

        .section-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 20px;
            border-bottom: 2px solid #f0f2f7;
            padding-bottom: 10px;
        }

        .btn-add-small {
            background: #667eea;
            color: white;
            text-decoration: none;
            padding: 8px 16px;
            border-radius: 8px;
            font-size: 0.85rem;
            transition: 0.3s;
        }

        .btn-add-small:hover { background: #5a6fd6; }

        .item-row {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 15px;
            background: #f8fafc;
            border-radius: 12px;
            margin-bottom: 10px;
            border-left: 4px solid #667eea;
        }

        .btn-delete {
            background: #fff1f2;
            border: none;
            color: #e11d48;
            padding: 5px 10px;
            border-radius: 6px;
            cursor: pointer;
            font-size: 1.1rem;
            transition: 0.2s;
        }

        .btn-delete:hover { background: #ffe4e6; }

        .project-grid {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 15px;
        }

        @@media (max-width: 768px) {
            .project-grid { grid-template-columns: 1fr; }
        }
    </style>
</head>
<body>
    <div class="container">
        <a href="/" class="btn-back">← Назад к списку</a>
        
        <div class="profile-header">
            @if (!string.IsNullOrEmpty(Model.ImageUrl)) {
                <img src="@Model.ImageUrl" class="profile-image-large" alt=""/>
            } else {
                <div style="width:150px; height:150px; background:#ddd; border-radius:50%;"></div>
            }
            <div style="flex: 1;">
                <h1 class="profile-name">@Model.Name</h1>
                <p style="color: #718096; font-style: italic;">@Model.ShortBio</p>
                <p><strong>Email:</strong> @Model.Email</p>
                <p><strong>Родился:</strong> @Model.Birthday.ToShortDateString()</p>
            </div>
        </div>

        <div class="section-card">
            <div class="section-header">
                <h2 style="margin:0;">Навыки</h2>
                <a asp-controller="Skills" asp-action="CreateSkills" asp-route-userId="@Model.Id" class="btn-add-small">+ Добавить навык</a>
            </div>
            <div>
                @if (Model.Skills.Any()) {
                    @foreach (var skill in Model.Skills) {
                        <div class="item-row">
                            <span><strong>@skill.Name</strong></span>
                            <form asp-controller="Skills" asp-action="Delete" asp-route-id="@skill.Id" method="post" onsubmit="return confirm('Удалить этот навык?')">
                                <button type="submit" class="btn-delete">Удалить</button>
                            </form>
                        </div>
                    }
                } else {
                    <p style="color:#a0aec0; text-align:center;">Навыков пока нет</p>
                }
            </div>
        </div>

        <div class="section-card">
            <div class="section-header">
                <h2 style="margin:0;">Проекты</h2>
                <a asp-controller="Projects" asp-action="CreateProjects" asp-route-userId="@Model.Id" class="btn-add-small">+ Добавить проект</a>
            </div>
            <div class="project-grid">
                @if (Model.Projects.Any()) {
                    @foreach (var proj in Model.Projects) {
                        <div class="item-row">
                            <div>
                                <strong>@proj.Name</strong><br />
                                <small style="color:#718096">Статус: @proj.IsActive</small>
                            </div>
                            <form asp-controller="Projects" asp-action="Delete" asp-route-id="@proj.Id" method="post" onsubmit="return confirm('Удалить этот проект?')">
                                <button type="submit" class="btn-delete">Удалить</button>
                            </form>
                        </div>
                    }
                } else {
                    <p style="color:#a0aec0; text-align:center; grid-column: 1/-1;">Проектов пока нет</p>
                }
            </div>
        </div>
    </div>
</body>
</html>